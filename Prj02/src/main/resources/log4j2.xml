<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <File name="File" fileName="target/logs/output.log">
            <PatternLayout>
                <Pattern>%d %p %m%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <loggers>
        <Root level="Trace">
            <Appender-ref ref="File"/>
        </Root>
    </loggers>

</Configuration>